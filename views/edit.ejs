<%- include('header') %>
<%- include('components/nav') %>
<div class="container-fluid create">
  <div class="row">
    <div class="col-md-4">
      <a href="/posts?author=<%= user._id %>">
        <img class="avatar" src="/img/<%= user.avatar %>">
      </a>
    </div>
    <div class="col-md-8">
      <form action="/posts/<%= post._id %>/edit" method="post" class="form-create">
        <div class="form-group">
          <label>文章标题</label>
          <input class="form-control" type="text" name="title" value="<%= post.title %>">
        </div>
        <div class="form-group">
          <label>文章内容</label>
          <textarea class="form-control" name="content" rows="15">
            <%= post.content %>
          </textarea>
        </div>
        <button type="submit" class="btn btn-primary">提交修改</button>
      </form>
    </div>
  </div>
</div>
<%- include('footer') %>