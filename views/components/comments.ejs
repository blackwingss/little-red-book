<div class="container-fluid comments ">
  <h4>留言板</h4>

  <% comments.forEach(function (comment) { %>
  <div class="comment">
    <div class="comment-title">
      <a class="author" href="/posts?author=<%= comment.author._id %>">
        <img src="/img/<%= comment.author.avatar %>">
        <%= comment.author.name %>
      </a>
      <span class="date"><%= comment.created_at %></span>
      <% if (user && comment.author._id && user._id.toString() === comment.author._id.toString()) { %>
      <div class="actions">
        <a class="reply" href="/posts/<%= post._id %>/comment/<%= comment._id %>/remove">删除</a>
      </div>
      <% } %>
    </div>
    <div class="comment-content">
      <div class="text"><%- comment.content %></div>    
    </div>
  </div>
  <% }) %>

  <% if (user) { %>
  <form class="form-comment" method="post" action="/posts/<%= post._id %>/comment">
    <div class="form-group">
      <label>新留言</label>
      <textarea class="form-control" rows="3" name="content"></textarea>
    </div>
    <input type="submit" class="btn btn-primary" value="留言" />
  </form>
  <% } %>

</div>
